{
  "workbench.colorTheme": "GitHub Sharp Dark",
  "editor.fontFamily": "'Fira Code Retina', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
  "editor.fontSize": 12,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.visible": true,
  "explorer.openEditors.visible": 0,
  "files.autoSave": "afterDelay",
  "bracketPairColorizer.showBracketsInGutter": true,
  "indentRainbow.colors": [
    "rgba(255,255,64,0.07)",
    "rgba(127,255,127,0.07)",
    "rgba(255,127,255,0.07)",
    "rgba(79,236,236,0.07)"
  ],
  "indentRainbow.errorColor": "rgba(128,32,32,0.6)",
  // Highlight matching Tag
  "highlight-matching-tag.styles": {
    "opening": {
      "left": {
        "custom": {
          "borderWidth": "0 0 0 2px",
          "borderStyle": "solid",
          "borderColor": "red",
          "borderRadius": "4px",
          "overviewRulerColor": "white"
        }
      },
      "right": {
        "custom": {
          "borderWidth": "0 2px 0 0",
          "borderStyle": "solid",
          "borderColor": "red",
          "borderRadius": "4px",
          "overviewRulerColor": "white"
        }
      }
    }
  },
  "workbench.iconTheme": "material-icon-theme",
  "window.openFilesInNewWindow": "on",
  "workbench.statusBar.visible": true,
  "editor.cursorWidth": 0,
  "terminal.integrated.fontSize": 12,
  "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
  "editor.wordWrap": "on",
  "php-cs-fixer.lastDownload": 1593424148247,

  // Language specific formating config
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[ruby]": {
    "editor.formatOnSave": true
  },
  // Set the default
  "editor.formatOnSave": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.multiCursorModifier": "alt",

  // Ruby extension configuration

  "rufo.exe": "rufo", // can be an absolute path
  "rufo.useBundler": false,
  "ruby.useLanguageServer": true, // use the internal language server (see below)
  "explorer.confirmDragAndDrop": false,
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "files.associations": {
    "*.erb": "erb",
    "*.module": "php"
  },
  "php.executablePath": "/usr/bin/php",
  "ruby.format": "rufo",
  "vscode-erb-beautify.tab": true,
  "vscode-erb-beautify.tabStops": 2,
  "prettier.vueIndentScriptAndStyle": true,
  "git.suggestSmartCommit": false,
  "diffEditor.maxComputationTime": 0,
  "window.zoomLevel": 0,
  "beautify.language": {
    "js": {
      "type": ["javascript", "json"],
      "filename": [".jshintrc", ".jsbeautifyrc"]
      // "ext": ["js", "json"]
      // ^^ to set extensions to be beautified using the javascript beautifier
    },
    "css": ["css", "scss"],
    "html": ["htm", "html"]
  }
}
